<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/PositionElemTable" 
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent" 
             xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow android:paddingTop = "10dip"
	     android:paddingBottom = "10dip"
	     android:layout_height="fill_parent">
        <TextView
         android:id="@+id/event_elem_time" 
         android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     android:background="@color/date_bckgrnd_color"
	     android:textColor="@color/date_text_color"
	     />
        <TextView
         android:id="@+id/event_elem_desc" 
         android:layout_width="fill_parent"
     	 android:layout_height="fill_parent"
         android:paddingLeft="6dip"
         android:ellipsize="end"
         android:scrollHorizontally="true"
          android:background="@color/event_back_color"
	     android:textColor="@color/event_text_color"
      />
    </TableRow>
</TableLayout>