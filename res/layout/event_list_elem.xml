<?xml version="1.0" encoding="utf-8"?>
   <android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="@dimen/margin_small"
    grid:columnCount="2"
    grid:alignmentMode="alignBounds"
        >


    <ImageView
        android:src="@drawable/forwarded_call"
        android:id="@+id/event_icon"
        grid:layout_rowSpan="3" />

   <TextView
        style="@style/EventText.ShortDescription"
        grid:layout_row="0"
        android:id="@+id/event_elem_short_desc"
        android:text="short description"
        />
    <TextView
        style="@style/EventText.LongDescription"
        grid:layout_row="1"
        grid:layout_column="1"
        android:id="@+id/event_elem_full_desc"
        android:text="full description"
        />
   	<TextView
        style="@style/EventText.Date"
        android:id="@+id/event_elem_time"
        android:text="09:00"
        grid:layout_row="2"
        grid:layout_column="1"
        />

</android.support.v7.widget.GridLayout>
