<?xml version="1.0" encoding="utf-8"?>
   <android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="@dimen/margin_small"
    grid:columnCount="2"
    grid:alignmentMode="alignBounds" >

    <ImageView
        grid:layout_row="0"
        android:src="@drawable/forwarded_call"
        android:id="@+id/event_icon"
        grid:layout_rowSpan="3" />

   <TextView
        android:layout_width="0dp"
        grid:layout_gravity="fill_horizontal"
        style="@style/EventText.ShortDescription"
        grid:layout_row="0"
        android:id="@+id/event_elem_short_desc"
        />
    <TextView
        style="@style/EventText.LongDescription"
        android:layout_width="0dp"
        grid:layout_gravity="fill_horizontal"
        grid:layout_row="1"
        grid:layout_column="1"
        android:id="@+id/event_elem_full_desc"
        />
   	<TextView
        style="@style/EventText.Date"
        android:id="@+id/event_elem_time"
        grid:layout_row="2"
        grid:layout_column="1"
        />

</android.support.v7.widget.GridLayout>
