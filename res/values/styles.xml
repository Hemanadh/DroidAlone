<?xml version="1.0" encoding="utf-8"?>
<resources>



  <style name="WizardText">
      <item name="android:textSize">@dimen/text_size_medium</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:padding">@dimen/margin_small</item>

  </style>


  <style name="WizardButton">
      <item name="android:textColor">@color/white</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
   </style>


    <style name="WizardTitle">
      <item name="android:textSize">@dimen/text_size_xlarge</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textColor">@color/light_blue</item>
      <item name="android:gravity">center_horizontal</item>
  </style>


  <style name="WizardEditText">
      <item name="android:padding">@dimen/margin_small</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:textSize">@dimen/text_size_large</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:inputType">textImeMultiLine</item>
  </style>
  <style name="WizardEditText.Password">
      <item name="android:inputType">textPassword</item>
  </style>


</resources>
